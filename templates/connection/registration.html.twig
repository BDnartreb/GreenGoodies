{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main>
    <div class="container">
        <div class="container-half container-image">
            <img src="{{ asset('images/Registration_Lite.png') }}" alt="Image de la page d'enregistrement" />
        </div>
        <div class="container-half container-text">
                <h2>Inscription</h2>
                <p>Tous les champs sont obligatoires.</p>
                {{ form_errors(form) }}
                {{ form_start(form) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                    <div>
                        <label>
                            {{ form_widget(form.CGU) }} <!-- Case à cocher -->
                            {{ form_label(form.CGU) }}  <!-- Texte du label -->
                        </label>
                        {{ form_errors(form.CGU) }} <!-- Afficher les éventuelles erreurs de validation -->
                    </div>
                    <div class="button">
                        <button class="button-submit">S'inscrire</button>
                    </div>
                {{ form_end(form) }}
                <a href=" {{ path('app_login') }}" alt="S'inscrire">J'ai déjà un compte? Se connecter</a>
        </div>
    </div>
</main>  
{% endblock %}
